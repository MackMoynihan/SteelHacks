<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yijinkang.demode.MainActivity">

    <TextView
        android:text="Enter the name of a new project:"
        android:id="@+id/newProj"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp" />

    <EditText
        android:id="@+id/projName"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newProj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/newProjButton"
        android:text="Start my new project!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="startNewProject"
        android:layout_below="@+id/projName"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/openSavedButton"
        android:text="or open a saved project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="openSavedProject"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/newProjButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
